<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="rootContainer" alignment="CENTER" prefHeight="600.0" prefWidth="400.0" spacing="20.0" styleClass="root-container" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.shiyi.zzuli_drcom.LoginController">
   <children>
      <!-- 顶部间距 -->
      <Region prefHeight="30.0" />

      <!-- 应用图标和标题 -->
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Label fx:id="titleLabel" styleClass="app-title" text="DrCOM" />
            <Label styleClass="app-subtitle" text="校园网认证客户端" />
         </children>
      </VBox>

      <!-- 网络信息显示 -->
      <Label fx:id="networkInfoLabel" styleClass="network-info" text="正在获取网络信息..." />

      <!-- 登录表单 -->
      <VBox alignment="CENTER" spacing="15.0" styleClass="form-container">
         <children>
            <!-- 用户名输入框 -->
            <VBox spacing="5.0">
               <children>
                  <Label styleClass="field-label" text="用户名" />
                  <TextField fx:id="usernameField" promptText="请输入学号" styleClass="ios-text-field" />
               </children>
            </VBox>

            <!-- 密码输入框 -->
            <VBox spacing="5.0">
               <children>
                  <Label styleClass="field-label" text="密码" />
                  <PasswordField fx:id="passwordField" promptText="请输入密码" styleClass="ios-text-field" />
               </children>
            </VBox>

            <!-- 高级设置按钮 -->
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Button fx:id="advancedButton" mnemonicParsing="false" styleClass="ios-button-link" text="高级设置" />
                  <Label fx:id="advancedIndicator" styleClass="advanced-indicator" text="▼" />
               </children>
            </HBox>

            <!-- 服务器地址 (默认隐藏) -->
            <VBox fx:id="serverContainer" spacing="5.0" visible="false" managed="false">
               <children>
                  <Label styleClass="field-label" text="服务器地址" />
                  <TextField fx:id="serverField" promptText="10.30.1.19" styleClass="ios-text-field" />
               </children>
            </VBox>

            <!-- 选项复选框 -->
            <VBox spacing="8.0">
               <children>
                  <CheckBox fx:id="rememberCheckBox" styleClass="ios-checkbox" text="记住登录信息" />
                  <CheckBox fx:id="autoLoginCheckBox" styleClass="ios-checkbox" text="自动登录" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
         </padding>
      </VBox>

      <!-- 登录按钮和进度指示器 -->
      <VBox alignment="CENTER" spacing="15.0">
         <children>
            <Button fx:id="loginButton" mnemonicParsing="false" styleClass="ios-button-primary" text="登录" />
            <Button fx:id="monitorButton" mnemonicParsing="false" styleClass="ios-button-secondary" text="网络监控" visible="false" />
            <Button fx:id="disconnectButton" mnemonicParsing="false" styleClass="ios-button-secondary" text="断开连接" visible="false" />
            <ProgressIndicator fx:id="progressIndicator" styleClass="ios-progress" visible="false" />
         </children>
      </VBox>

      <!-- 状态信息 -->
      <Label fx:id="statusLabel" styleClass="status-text" text="请输入用户名和密码" textAlignment="CENTER" wrapText="true" />

      <!-- 底部间距 -->
      <Region prefHeight="30.0" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
