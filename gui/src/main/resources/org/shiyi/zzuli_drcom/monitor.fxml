<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>

<VBox fx:id="monitorContainer" alignment="CENTER" prefHeight="700.0" prefWidth="500.0" spacing="15.0" styleClass="root-container" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.shiyi.zzuli_drcom.MonitorController">
   <children>
      <!-- 顶部导航 -->
      <HBox alignment="CENTER" spacing="10.0" styleClass="nav-container">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" styleClass="ios-button-link" text="← 返回登录" />
            <Region HBox.hgrow="ALWAYS" />
            <Label styleClass="nav-title" text="网络监控" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="refreshButton" mnemonicParsing="false" styleClass="ios-button-link" text="刷新" />
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>

      <!-- 实时状态卡片 -->
      <VBox spacing="10.0" styleClass="stats-container">
         <children>
            <!-- 网络速度卡片 -->
            <HBox spacing="15.0" styleClass="stats-card">
               <children>
                  <VBox alignment="CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label styleClass="stats-label" text="上传速度" />
                        <Label fx:id="uploadSpeedLabel" styleClass="stats-value upload" text="0.00 KB/s" />
                     </children>
                  </VBox>
                  <Separator orientation="VERTICAL" />
                  <VBox alignment="CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label styleClass="stats-label" text="下载速度" />
                        <Label fx:id="downloadSpeedLabel" styleClass="stats-value download" text="0.00 KB/s" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
               </padding>
            </HBox>

            <!-- 流量统计卡片 -->
            <HBox spacing="15.0" styleClass="stats-card">
               <children>
                  <VBox alignment="CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label styleClass="stats-label" text="总上传" />
                        <Label fx:id="totalUploadLabel" styleClass="stats-value" text="0 B" />
                     </children>
                  </VBox>
                  <Separator orientation="VERTICAL" />
                  <VBox alignment="CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label styleClass="stats-label" text="总下载" />
                        <Label fx:id="totalDownloadLabel" styleClass="stats-value" text="0 B" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
               </padding>
            </HBox>

            <!-- 系统信息卡片 -->
            <HBox spacing="15.0" styleClass="stats-card">
               <children>
                  <VBox alignment="CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label styleClass="stats-label" text="活跃连接" />
                        <Label fx:id="connectionsLabel" styleClass="stats-value" text="0" />
                     </children>
                  </VBox>
                  <Separator orientation="VERTICAL" />
                  <VBox alignment="CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label styleClass="stats-label" text="内存使用" />
                        <Label fx:id="memoryLabel" styleClass="stats-value" text="0.00 MB" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </VBox>

      <!-- 图表容器 -->
      <VBox styleClass="chart-container">
         <children>
            <Label styleClass="chart-title" text="近一小时网络速度趋势" />
            <LineChart fx:id="speedChart" animated="false" createSymbols="false" legendVisible="true" prefHeight="250.0">
               <xAxis>
                  <CategoryAxis fx:id="timeAxis" side="BOTTOM" />
               </xAxis>
               <yAxis>
                  <NumberAxis fx:id="speedAxis" label="速度 (KB/s)" side="LEFT" />
               </yAxis>
            </LineChart>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </VBox>

      <!-- 状态信息 -->
      <Label fx:id="statusLabel" styleClass="status-text" text="正在监控网络状态..." />

   </children>
   <padding>
      <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
   </padding>
</VBox>
